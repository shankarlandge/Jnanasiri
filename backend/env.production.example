# Production Environment Configuration for Janashiri LMS
# Copy this file to .env and update the values for your deployment

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/janashiri_lms?retryWrites=true&w=majority
NODE_ENV=production

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_characters
JWT_EXPIRES_IN=7d

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3002
FRONTEND_URL=https://your-domain.com

# ==============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@janashiri.edu

# ==============================================
# CLOUDINARY CONFIGURATION (File Uploads)
# ==============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
ADMIN_EMAIL=admin@janashiri.edu
ADMIN_PASSWORD=ChangeThisInProduction@123

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==============================================
# DEPLOYMENT SPECIFIC
# ==============================================
# For Vercel deployment
VERCEL_URL=your-vercel-app.vercel.app

# For Railway deployment  
RAILWAY_STATIC_URL=your-railway-app.railway.app

# For Render deployment
RENDER_EXTERNAL_URL=https://your-render-app.onrender.com

# ==============================================
# OPTIONAL: MONITORING & ANALYTICS
# ==============================================
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# GOOGLE_ANALYTICS_ID=GA-XXXXX-X
# LOG_LEVEL=info